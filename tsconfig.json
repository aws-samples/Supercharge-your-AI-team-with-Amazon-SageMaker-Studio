{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": false,
    "rootDirs": ["."]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist/**/*", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
